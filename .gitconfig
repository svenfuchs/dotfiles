[include]
  path = ~/.gitconfig.private
[user]
  name = Sven Fuchs
  email = me@svenfuchs.com
[color]
  ui = true
  status = auto
  diff = auto
  branch = auto
  interactive = auto
[alias]
  st = status
  ci = commit
  co = checkout
  cp = cherry-pick
  unstage = reset HEAD --
  edit   = commit --amend --edit
  revise = commit --amend -aC HEAD
  last = log -1 HEAD --decorate
  juti = commit
  jeze = push
  wasn = status
  sup = status
  yo = commit
  crap = reset --hard
  # remove all local branches included in the current branch
  cleanup = !git branch | grep -E '^[^*]' | xargs git branch -d
  l = log --decorate --graph --oneline
  ll = log --decorate --graph --format='%C(blue)%ad%Creset %C(yellow)%h%Creset%C(green)%d%Creset %s [%an]'
  g = grep -n
  d = diff --word-diff
[merge]
  tool = opendiff
  conflictstyle = diff3
[core]
  whitespace = fix
  quotepath = false
  excludesfile = ~/.gitignore.global
[heroku]
  account = sven
[credential]
  helper = osxkeychain
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[push]
	default = current
